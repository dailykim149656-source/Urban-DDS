# App Runtime
NODE_ENV=development

# Auth (Google OAuth via Auth.js / NextAuth)
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET=replace_with_long_random_secret
NEXTAUTH_SECRET=replace_with_long_random_secret
NEXTAUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend (optional when API is hosted elsewhere)
# Leave empty to call same-origin API routes.
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_DEFAULT_ADDRESS=서울

# Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_API_MODE=googleai

# Vertex AI mode (set GEMINI_API_MODE=vertex)
# The app reads project from GOOGLE_CLOUD_PROJECT (or GCP_PROJECT / GCP_PROJECT_ID fallback)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Optional data source toggle
DDS_DATA_SOURCE=mock

# Firebase / Firestore logging
FIREBASE_USE_FIRESTORE=false
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# GCP Secret Manager secret names used by cloudbuild.yaml
# GEMINI_API_KEY
# FIREBASE_PROJECT_ID
# FIREBASE_CLIENT_EMAIL
# FIREBASE_PRIVATE_KEY
